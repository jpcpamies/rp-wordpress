/*------------------------------------*\
    $VARIABLES
\*------------------------------------*/
gutter = 20px




/*------------------------------------*\
    $SITIO
\*------------------------------------*/
body
	margin 0
	padding 0

.header
	background-color rgba(black,.8)
	padding gutter
	color white
	h1
		margin 0
		margin-bottom .5rem
	h2
		font-size 1rem
		margin 0
		
.content
	padding (gutter / 2)
	text-align center
	
.post
	text-align left
	display inline-block
	background-color rgba(black,.1)
	padding gutter
	margin-bottom gutter
	width 360px
	vertical-align top

.datos
	border-bottom 1px solid 
	padding-bottom .5rem
	
.img
	margin-right 0
	margin-left 0
	img
		width 100%
		height auto

.footer-negro
	background-color rgba(black,.8)
	li
		display inline-block
		color white

.cat__blog
	background-color orange

@media only screen and (min-width: 900px) 
	.content
		width 900px
		display block
		margin-right auto
		margin-left auto
		// Seleccionar un elemento con dos class
		&.sidebar
			background-color red
			width 68%
			display table-cell
	.table
		background-color blue
		display table
	aside
		background-color green
		display table-cell
		width 72%
	
	
		
	.post
		width 360px
		&:nth-child(odd)
			margin-right gutter
		
		
	
	
	